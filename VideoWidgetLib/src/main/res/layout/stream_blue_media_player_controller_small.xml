<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/controller_top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/controller_large_top"
        android:layout_alignParentTop="true"
        android:alpha="0.5"
        android:background="@color/balck">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/controller_large_top"
            android:layout_alignParentLeft="true"
            android:clickable="true">

            <ImageView
                android:id="@+id/image_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/small_margin_left"
                android:layout_marginRight="@dimen/small_margin_left"
                android:src="@drawable/blue_ksy_back" />

        </RelativeLayout>

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/live_anchor_margin"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/large_text_size" />

        <ImageView
            android:id="@+id/stream_setting"
            android:layout_alignParentRight="true"
            android:src="@drawable/short_overflow_image"
            android:layout_marginRight="@dimen/small_margin_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/controller_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/controller_large_top"
        android:layout_alignParentBottom="true"
        android:alpha="0.5"
        android:background="@color/balck"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/video_playback_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/small_margin_left"
            android:layout_marginRight="@dimen/small_margin_left"
            android:src="@drawable/video_pause_circle_image" />

        <ImageView
            android:id="@+id/stream_watch_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/small_margin_left"
            android:layout_toRightOf="@id/video_playback_image_view"
            android:src="@drawable/short_head_image_p" />

        <TextView
            android:id="@+id/stream_watch_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/stream_watch_img"
            android:text="@string/stream_watch_tv_default"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size" />

        <ImageView
            android:id="@+id/video_fullscreen_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/small_margin_left"
            android:layout_marginRight="@dimen/small_margin_left"
            android:src="@drawable/video_change_big" />

    </RelativeLayout>

</RelativeLayout>