<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/controller_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/live_top_alpha_image"
        android:clickable="true" >

        <ImageView
            android:id="@+id/image_live_replay_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/small_margin_left"
            android:layout_marginRight="@dimen/small_margin_left"
            android:src="@drawable/live_anchor" />

        <ImageView
            android:id="@+id/text_live_replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/live_replay_image"
            android:layout_toRightOf="@+id/image_live_replay_head"
            android:layout_toEndOf="@+id/image_live_replay_head" />

        <ImageView
            android:id="@+id/title_text_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/small_margin_left"
            android:layout_marginRight="@dimen/small_margin_left"
            android:gravity="center_vertical"
            android:src="@drawable/live_close"/>

        <ImageView
            android:id="@+id/title_text_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/title_text_close"
            android:layout_marginLeft="@dimen/small_margin_left"
            android:layout_marginRight="@dimen/small_margin_left"
            android:gravity="center_vertical"
            android:src="@drawable/live_report_image"/>

        <TextView
            android:id="@+id/textViewNetError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:text="@string/live_replay_net_error"
            android:layout_below="@+id/text_live_replay"
            android:layout_toRightOf="@+id/image_live_replay_head"
            android:layout_toEndOf="@+id/image_live_replay_head" />
    </RelativeLayout>

</RelativeLayout>