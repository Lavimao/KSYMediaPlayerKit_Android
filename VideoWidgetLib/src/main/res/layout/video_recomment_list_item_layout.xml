<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/ksy_color_card_bg">

    <ImageView
        android:id="@+id/icon_img"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginLeft="@dimen/list_margin"
        android:src="@drawable/video_img_default" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_large_margin"
        android:layout_marginRight="100dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/icon_img"
        android:text="title_tv"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/ksy_color_font" />

    <ImageView
        android:id="@+id/watch_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title_tv"
        android:layout_below="@+id/title_tv"
        android:layout_toRightOf="@+id/icon_img"
        android:src="@drawable/short_eye_image" />

    <TextView
        android:id="@+id/watch_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/watch_img"
        android:layout_below="@+id/title_tv"
        android:layout_marginLeft="@dimen/list_item_margin"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/watch_img"
        android:gravity="center"
        android:text="Text"
        android:textColor="@color/ksy_color_font_alpha"
        android:textSize="@dimen/small_text_size" />

    <ImageView
        android:id="@+id/time_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/watch_img"
        android:layout_below="@+id/title_tv"
        android:layout_toRightOf="@+id/watch_tv"
        android:src="@drawable/ic_query_builder_grey600_24dp" />

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/watch_img"
        android:layout_below="@+id/title_tv"
        android:layout_marginLeft="@dimen/list_item_margin"
        android:layout_toRightOf="@+id/time_img"
        android:gravity="center"
        android:text="Text"
        android:textColor="@color/ksy_color_font_alpha"
        android:textSize="@dimen/small_text_size" />

</RelativeLayout>
