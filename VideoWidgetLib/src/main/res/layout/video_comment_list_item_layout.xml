<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/ksy_color_card_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/list_item_margin"
        android:layout_marginTop="@dimen/list_item_margin"
        android:src="@drawable/shortvideo_list_item_image" />

    <TextView
        android:id="@+id/user_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/list_item_margin"
        android:layout_marginRight="100dp"
        android:layout_marginTop="@dimen/list_item_margin"
        android:layout_toEndOf="@+id/icon_img"
        android:layout_toRightOf="@+id/icon_img"
        android:text="user_tv"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/ksy_color_font" />

    <TextView
        android:id="@+id/comment_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_tv"
        android:layout_below="@+id/user_tv"
        android:layout_marginRight="@dimen/list_item_margin"
        android:layout_marginTop="@dimen/list_item_margin"
        android:layout_toEndOf="@+id/icon_img"
        android:layout_toRightOf="@+id/icon_img"
        android:text="comment_tv"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/ksy_color_font_alpha" />

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/comment_tv"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:text="Text"
        android:textColor="@color/ksy_color_font"
        android:textSize="@dimen/small_text_size" />
</RelativeLayout>